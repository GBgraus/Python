def calcular_fatorial(n):
    if n < 0:
        return None 
    resultado = 1
    for i in range(2, n + 1):
        resultado *= i
    return resultado

while True:
    try:
        num = int(input("Digite um número inteiro não negativo para calcular o fatorial (ou -1 para sair): "))
        if num == -1:
            print("Encerrando o programa.")
            break
        if num < 0:
            print("Por favor, insira um número não negativo.")
            continue
        fatorial = calcular_fatorial(num)
        print(f"O fatorial de {num} é {fatorial}.")
    except ValueError:
        print("Entrada inválida. Por favor, insira um número inteiro.")
